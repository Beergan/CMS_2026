@page
@model CMS_2026.Pages.Admin.Lang.IndexModel
@{
    ViewData["Title"] = "Danh sách ngôn ngữ";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Danh sách ngôn ngữ</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box table-responsive">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a href="#list" data-toggle="tab" aria-expanded="true" class="nav-link active">
                            <i class="fas fa-list-ol"></i> Danh sách ngôn ngữ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/lang/create" aria-expanded="false" class="nav-link">
                            <i class="fas fa-plus-circle"></i> Tạo ngôn ngữ mới
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane show active" id="list">
                        <table id="datatable" class="table table-striped table-bordered dt-responsive">
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Tên</th>
                                    <th>Trạng thái</th>
                                    <th style="width:1%;min-width:80px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lang in Model.Languages)
                                {
                                    <tr>
                                        <td>@lang.LangId</td>
                                        <td>@lang.LangName</td>
                                        <td>@(lang.Enabled ? "Kích hoạt" : "Tắt")</td>
                                        <td align="center">
                                            <div class="btn-group btn-group-sm">
                                                <a title="Hiệu chỉnh" href="/admin/lang/edit?id=@lang.Id" type="button" class="btn btn-warning">
                                                    <span class="mdi mdi-pencil"></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

