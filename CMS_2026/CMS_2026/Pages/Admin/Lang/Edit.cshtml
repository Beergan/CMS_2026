@page
@model CMS_2026.Pages.Admin.Lang.EditModel
@{
    ViewData["Title"] = "Hiệu chỉnh ngôn ngữ";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Hiệu chỉnh ngôn ngữ</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Lang?.Id" />
                    
                    <div class="form-group">
                        <label>Mã ngôn ngữ</label>
                        <input type="text" name="LangId" class="form-control" value="@Model.Lang?.LangId" readonly />
                    </div>

                    <div class="form-group">
                        <label>Tên ngôn ngữ <span class="text-danger">*</span></label>
                        <input type="text" name="Title" class="form-control" value="@Model.Lang?.LangName" required />
                    </div>

                    <div class="form-group">
                        <label>Định dạng ngày</label>
                        <input type="text" name="DateFormat" class="form-control" value="@Model.Lang?.DateFormat" />
                    </div>

                    <div class="form-group">
                        <label>Định dạng giờ</label>
                        <input type="text" name="TimeFormat" class="form-control" value="@Model.Lang?.TimeFormat" />
                    </div>

                    <div class="form-group">
                        <label>Kích hoạt</label>
                        <div class="form-check">
                            <input type="checkbox" name="Enabled" class="form-check-input" checked="@Model.Lang?.Enabled" />
                            <label class="form-check-label">Kích hoạt ngôn ngữ này</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a href="/admin/lang" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

