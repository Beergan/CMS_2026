@page
@model CMS_2026.Pages.Admin.Register.IndexModel
@{
    ViewData["Title"] = "Danh sách đăng ký";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Danh sách đăng ký</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box table-responsive">
                <table id="datatable" class="table table-striped table-bordered dt-responsive">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Điện thoại</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th style="width:1%;min-width:80px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var register in Model.Registers)
                        {
                            <tr>
                                <td>@register.Name</td>
                                <td>@register.Email</td>
                                <td>@register.Phone</td>
                                <td>@register.Status</td>
                                <td>@register.CreatedTime.ToString("dd/MM/yyyy")</td>
                                <td align="center">
                                    <div class="btn-group btn-group-sm">
                                        <button title="Xóa" type="button" class="btn btn-danger" onclick="deleteRegister(@register.Id)">
                                            <span class="mdi mdi-delete"></span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function deleteRegister(id) {
            if (!confirm('Bạn có chắc chắn muốn xóa đăng ký này?')) {
                return;
            }

            $.ajax({
                url: '/admin/register?delete',
                type: 'POST',
                data: {
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                    Id: id
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra!');
                }
            });
        }
    </script>
}

