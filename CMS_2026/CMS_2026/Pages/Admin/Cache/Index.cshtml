@page
@model CMS_2026.Pages.Admin.Cache.IndexModel
@{
    ViewData["Title"] = "Quản lý Cache";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Quản lý Cache</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box table-responsive">
                <table id="datatable" class="table table-striped table-bordered dt-responsive" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Cache Key</th>
                            <th style="width:200px;">Thời gian tạo</th>
                            <th style="width:100px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model.CacheEntries)
                        {
                            <tr>
                                <td style="min-width: 230px; width: 70%;">@entry.Key</td>
                                <td align="center">@entry.Value.ToString("dd-MM-yyyy HH:mm")</td>
                                <td align="center">
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-danger" onclick="deleteCache('@entry.Key')">
                                            <i class="mdi mdi-delete"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link href="~/admin/assets/libs/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/admin/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/admin/assets/libs/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/libs/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script>
        function deleteCache(key) {
            Swal.fire({
                title: 'Hãy xác nhận?',
                text: 'Thao tác xóa không thể hoàn tác',
                type: "warning",
                showCancelButton: true,
                confirmButtonText: 'Được',
                cancelButtonText: 'Khoan!',
                confirmButtonClass: "btn btn-success mt-2",
                cancelButtonClass: "btn btn-danger ml-2 mt-2",
                buttonsStyling: false
            }).then(function(result) {
                if (result.value) {
                    const formData = new FormData();
                    formData.append('key', key);
                    formData.append('__RequestVerificationToken', '@Html.AntiForgeryToken()');

                    fetch('?handler=Delete', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': '@Html.AntiForgeryToken()'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Chúc mừng!',
                                text: data.message,
                                type: "success"
                            }).then(() => location.reload());
                        } else {
                            Swal.fire({
                                title: 'Thôi xong!',
                                text: data.message,
                                type: "error"
                            });
                        }
                    })
                    .catch(error => {
                        Swal.fire({
                            title: 'Thôi xong!',
                            text: 'Có lỗi xảy ra',
                            type: "error"
                        });
                    });
                }
            });
        }

        $(document).ready(function() {
            $('#datatable').DataTable({
                "aaSorting": [],
                "pageLength": 100,
                "lengthChange": false,
            });
        });
    </script>
}

