<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Hiệu chỉnh trang</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card-box table-responsive">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a href="@Constants.Admin_Url/page" aria-expanded="true" class="nav-link">
                            <i class="fas fa-list-ol"></i> Danh sách trang
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#edit" data-toggle="tab" aria-expanded="false" class="nav-link active">
                            <i class="fe-edit"></i> Hiệu chỉnh trang
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane show active" id="edit">
                        <div class="card">
                            <div class="card-header">
                                @Model.Page.Title <button type="button" class="btn btn-info float-right" data-toggle="collapse" aria-expanded="true" data-target="#main"><i class="fa fa-chevron-down pull-right"></i></button>
                            </div>
                            <div class="card-body collapse" id="main">
                                <form class="form-horizontal validable" role="form" method="post" asp-page-handler="UpdatePage" style="margin-bottom: 20px;">
                    @Html.AntiForgeryToken()
                                    @if (ViewData.ModelState.ErrorCount > 0)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                        </div>
                                    }
                                    <input type="hidden" name="Id" value="@Model.Page.Id" />
                                    <div class="form-group row">
                                        <label class="col-12 col-md-2 col-form-label">Ngôn ngữ</label>
                                        <div class="col-12 col-md-10">
                                            <input type="text" class="form-control" value="@Model.Page.LangId @(lang?.Title)" disabled />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-12 col-md-2 col-form-label">Component</label>
                                        <div class="col-12 col-md-10">
                                            <select class="form-control" name="ComptKey" disabled>
                                                @foreach (var compt in Model.PageTemplates)
                                                {
                                                    <option value="@compt.Key" selected="@(Model.Page.ComptKey == compt.Key)">@compt.Value</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-12 col-md-2 col-form-label">Tiêu đề <span class="text-danger">*</span></label>
                                        <div class="col-12 col-md-10">
                                            <input type="text" class="form-control" name="Title" value="@Model.Page.Title" required />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-12 col-md-2 col-form-label">Đường dẫn <span class="text-danger">*</span></label>
                                        <div class="col-12 col-md-10">
                                            <input type="text" class="form-control" name="PathPattern" value="@(Model.Page.PathPattern?.GetBeforeLast("/")?.GetAfter("/") ?? "root")" required />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-12 col-md-2 col-form-label">Meta Description</label>
                                        <div class="col-12 col-md-10">
                                            <textarea class="form-control" name="MetaDescription" rows="3">@Model.Page.MetaDescription</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-12 col-md-2 col-form-label">Meta Keywords</label>
                                        <div class="col-12 col-md-10">
                                            <input type="text" class="form-control" name="MetaKeywords" data-role="tagsinput" value="@Model.Page.MetaKeywords" />
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group mb-0">
                                        <div>
                                            <button type="submit" class="btn btn-gradient waves-effect waves-light">
                                                Xác nhận
                                            </button>
                                            <button type="button" class="btn btn-light waves-effect ml-1" onclick="window.history.back()">
                                                Quay lại
                                            </button>
                    </div>
                    </div>
                                </form>
                    </div>
                    </div>
                        @foreach (var compt in Model.Components)
                        {
                            if (compt.PageType == "item")
                            {
                                continue;
                            }
                            var comptSchema = JsonConvert.DeserializeObject<ObjectSchema>(compt.JsonSchema ?? "{}") ?? new ObjectSchema();

                            var config = Model.Configs.FirstOrDefault(t => t.ConfigKey == compt.ComptKey && t.LangId == Model.LangIdCompose)
                            ?? Model.Configs.FirstOrDefault(t => t.ConfigKey == compt.ComptKey);
                            //Loading config dataPage(devCuong)
                            Dictionary<string, object> comptData;
                            if (config?.JsonContent != null && !string.IsNullOrEmpty(config.JsonContent))
                            {
                                comptData = CMS_2026.Pages.Admin.Config.JsonHelper.DeserializeToDictionary(config.JsonContent);
                            }
                            else if (!string.IsNullOrEmpty(compt.JsonDefault))
                            {
                                comptData = CMS_2026.Pages.Admin.Config.JsonHelper.DeserializeToDictionary(compt.JsonDefault);
                            }
                            else
                            {
                                comptData = new Dictionary<string, object>();
                            }

                            if (comptData == null)
                            {
                                comptData = new Dictionary<string, object>();
                            }
                            bool hasConfigured = config?.JsonContent != null;
                            bool isEmptyCompt = comptSchema.SingleFieldTypes.Count == 0
                            && comptSchema.ArrayFieldTypes.Count == 0
                            && comptSchema.SingleObjectTypes.Count == 0
                            && comptSchema.ArrayObjectTypes.Count == 0;
                            if (isEmptyCompt && hasConfigured)
                            {
                                continue;
                            }
                            //
                            <div class="card">
                                <div class="card-header">
                                    @compt.ComptName@(!hasConfigured ? " (Chưa cấu hình)" : "") <button type="button" class="btn btn-info float-right collapsed" data-toggle="collapse" data-target="#@compt.ComptKey"><i class="fa fa-chevron-down pull-right"></i></button>
                                </div>
                                <div class="card-body collapse" id="@compt.ComptKey">
                                    @if (comptData.ContainsKey("Phrases"))
                                    {
                                        var phrases = comptData["Phrases"] as IDictionary<string, object>;
                                        var langIdCompose = Model.LangIdCompose;
                                        if (phrases != null && phrases.Count > 0 && langIdCompose != "vi" && langIdCompose != "en")
                                        {
                                            <div class="card">
                                                <div class="card-header">
                                                    Dịch thuật <button type="button" class="btn btn-info float-right collapsed" data-toggle="collapse" data-target="#phrases"><i class="fa fa-chevron-down pull-right"></i></button>
                                                </div>
                                                <div class="card-body collapse" id="phrases">
                                                    @foreach (var f in phrases)
                                                    {
                                                        <div class="form-group row">
                                                            <label class="col-12 col-md-2 col-form-label">Dịch sang @(Model.LangCompose?.Title ?? "") <@f.Key></label>
                                                            <div class="col-12 col-md-10">
                                                                <input type="text" class="form-control" value="@f.Value" />
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    }
                                    @await Html.PartialAsync("_Shared/_RenderSchema", new { Schema = comptSchema, Path = compt.ComptKey, Data = comptData })
                                    <hr />
                                    <div class="form-group mb-0">
                                        <form class="form-horizontal subform" role="form" method="post" asp-page-handler="UpdateCompt">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="LangId" value="@Model.LangIdCompose" />
                                            <input type="hidden" name="Id" value="@Model.Page.Id" />
                                            <input type="hidden" name="ComptKey" value="@compt.ComptKey" />
                                            <input type="hidden" name="JsonData" />
                                            <div>
                                                <button type="submit" class="btn btn-gradient waves-effect waves-light">
                                                    Cập nhật [@compt.ComptName]
                                                </button>
                                                <button type="button" class="btn btn-danger reset">
                                                    Reset
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    </div>
            </div>
        </div>
    </div>
</div>

