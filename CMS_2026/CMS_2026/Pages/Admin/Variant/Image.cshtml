@page
@model CMS_2026.Pages.Admin.Variant.ImageModel
@{
    ViewData["Title"] = "Quản lý hình ảnh biến thể";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Quản lý hình ảnh biến thể</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="form-group">
                    <label>Thêm hình ảnh</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="newImageUrl" placeholder="URL hình ảnh" />
                        <button type="button" class="btn btn-primary" onclick="addImage()">Thêm</button>
                    </div>
                </div>

                <div class="row mt-3">
                    @foreach (var imgUrl in Model.ImageUrls)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <img src="@imgUrl" class="card-img-top" alt="Variant image" style="height:200px;object-fit:cover;" />
                                <div class="card-body text-center">
                                    <button type="button" class="btn btn-danger btn-sm" onclick="removeImage('@imgUrl')">Xóa</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function addImage() {
            const imageUrl = document.getElementById('newImageUrl').value;
            if (!imageUrl) {
                alert('Vui lòng nhập URL hình ảnh');
                return;
            }

            const formData = new FormData();
            formData.append('Id', '@Model.Variant?.Id');
            formData.append('ImageUrl', imageUrl);
            formData.append('__RequestVerificationToken', '@Html.AntiForgeryToken()');

            fetch('?handler=Append', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                }
            });
        }

        function removeImage(imageUrl) {
            if (!confirm('Bạn có chắc muốn xóa hình này?')) return;

            const formData = new FormData();
            formData.append('Id', '@Model.Variant?.Id');
            formData.append('__RequestVerificationToken', '@Html.AntiForgeryToken()');

            fetch('?handler=Remove', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                }
            });
        }
    </script>
}

