@page
@model CMS_2026.Pages.Admin.Contact.IndexModel
@{
    ViewData["Title"] = "Danh sách liên hệ";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Danh sách liên hệ</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box table-responsive">
                <table id="datatable" class="table table-striped table-bordered dt-responsive">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Điện thoại</th>
                            <th>Nội dung</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th style="width:1%;min-width:80px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model.Contacts)
                        {
                            <tr>
                                <td>@contact.Name</td>
                                <td>@contact.Email</td>
                                <td>@contact.Phone</td>
                                <td>@(contact.Message?.Length > 50 ? contact.Message.Substring(0, 50) + "..." : contact.Message)</td>
                                <td>@contact.Status</td>
                                <td>@contact.CreatedTime.ToString("dd/MM/yyyy")</td>
                                <td align="center">
                                    <div class="btn-group btn-group-sm">
                                        <a title="Xem" href="/admin/contact/view?id=@contact.Id" type="button" class="btn btn-info">
                                            <span class="fa fa-eye"></span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

