@page
@model CMS_2026.Pages.Admin.User.IndexModel
@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Danh sách tài khoản</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box table-responsive">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a href="#list" data-toggle="tab" aria-expanded="true" class="nav-link active">
                            <i class="fas fa-list-ol"></i> Danh sách tài khoản
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/user/create" aria-expanded="false" class="nav-link">
                            <i class="fas fa-plus-circle"></i> Tạo tài khoản mới
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane show active" id="list">
                        <table id="datatable" class="table table-striped table-bordered dt-responsive">
                            <thead>
                                <tr>
                                    <th>Tên đăng nhập</th>
                                    <th>Tên hiển thị</th>
                                    <th>Email</th>
                                    <th>Ngày tạo</th>
                                    <th style="width:1%;min-width:80px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user.UserId</td>
                                        <td>@user.DisplayName</td>
                                        <td>@user.Email</td>
                                        <td>@user.CreatedTime.ToString("dd/MM/yyyy")</td>
                                        <td align="center">
                                            <div class="btn-group btn-group-sm">
                                                <a title="Hiệu chỉnh" href="/admin/user/edit?id=@user.Id" type="button" class="btn btn-warning">
                                                    <span class="mdi mdi-pencil"></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

