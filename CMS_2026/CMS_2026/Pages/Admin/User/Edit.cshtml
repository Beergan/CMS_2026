@page
@model CMS_2026.Pages.Admin.User.EditModel
@{
    ViewData["Title"] = "Hiệu chỉnh tài khoản";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Hiệu chỉnh tài khoản</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.User?.Id" />
                    
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        <input type="text" name="UserId" class="form-control" value="@Model.User?.UserId" readonly />
                    </div>

                    <div class="form-group">
                        <label>Họ và tên <span class="text-danger">*</span></label>
                        <input type="text" name="DisplayName" class="form-control" value="@Model.User?.DisplayName" required />
                    </div>

                    <div class="form-group">
                        <label>Email <span class="text-danger">*</span></label>
                        <input type="email" name="Email" class="form-control" value="@Model.User?.Email" required />
                    </div>

                    <div class="form-group">
                        <label>Mật khẩu mới</label>
                        <input type="password" name="Password" class="form-control" />
                        <small class="form-text text-muted">Để trống nếu không muốn đổi mật khẩu</small>
                    </div>

                    <div class="form-group">
                        <label>Kích hoạt</label>
                        <div class="form-check">
                            <input type="checkbox" name="Enabled" class="form-check-input" checked="@Model.User?.Enabled" />
                            <label class="form-check-label">Kích hoạt tài khoản này</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a href="/admin/user" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

