@page
@model CMS_2026.Pages.Admin.Category.ImageModel
@{
    ViewData["Title"] = "Upload ảnh chuyên mục";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Upload ảnh chuyên mục: @Model.Category?.Title</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <form method="post" id="imageForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Category?.Id" />
                    
                    <div class="form-group">
                        <label>URL hình ảnh</label>
                        <input type="text" name="ImageUrl" class="form-control" value="@Model.Category?.ImageUrl" />
                        <button type="button" class="btn btn-sm btn-secondary mt-2" onclick="openImagePicker()">Chọn hình</button>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Category?.ImageUrl))
                    {
                        <div class="form-group">
                            <label>Hình ảnh hiện tại</label>
                            <img src="@Model.Category.ImageUrl" class="img-fluid" style="max-height:300px;" />
                        </div>
                    }

                    <div class="form-group mb-0">
                        <button type="submit" class="btn btn-gradient">Xác nhận</button>
                        <a href="/admin/category" class="btn btn-light ml-1">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        document.getElementById('imageForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            
            try {
                const response = await fetch('', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                alert('Có lỗi xảy ra');
            }
        });

        function openImagePicker() {
            alert('Chức năng chọn hình sẽ được tích hợp với CKFinder');
        }
    </script>
}

