@page
@model CMS_2026.Pages.Admin.Group.CreateModel
@{
    ViewData["Title"] = "Thêm nhóm phân quyền";
    ViewData["CurrentBreadcrumb"] = "Thêm nhóm phân quyền";
    Layout = "_Layout";
}

<div class="container-fluid">
    @await Html.PartialAsync("_Shared/_Breadcrumb")
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="mdi mdi-plus-circle me-2"></i>
                        Thêm nhóm phân quyền mới
                    </h5>
                </div>
                <div class="card-body">
                    <form id="createForm" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label for="Name" class="form-label">
                                Tên nhóm <span class="text-danger">*</span>
                            </label>
                            <input type="text" 
                                   id="Name" 
                                   name="Name" 
                                   class="form-control" 
                                   placeholder="Nhập tên nhóm phân quyền"
                                   required 
                                   maxlength="200" />
                            <div class="form-text">Tên nhóm sẽ được hiển thị trong hệ thống</div>
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">
                                Mô tả
                            </label>
                            <textarea id="Description" 
                                      name="Description" 
                                      class="form-control" 
                                      rows="4"
                                      placeholder="Nhập mô tả cho nhóm phân quyền này (tùy chọn)"></textarea>
                            <div class="form-text">Mô tả giúp bạn dễ dàng nhận biết mục đích của nhóm phân quyền</div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/admin/group" class="btn btn-secondary">
                                <i class="mdi mdi-close me-1"></i>
                                Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="mdi mdi-content-save me-1"></i>
                                Tạo nhóm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#createForm').on('submit', function(e) {
            e.preventDefault();
            
            var formData = $(this).serialize();
            var submitBtn = $(this).find('button[type="submit"]');
            var originalText = submitBtn.html();
            
            submitBtn.prop('disabled', true).html('<i class="mdi mdi-loading mdi-spin me-1"></i> Đang tạo...');
            
            $.ajax({
                url: '/admin/group/create',
                type: 'POST',
                data: formData,
                success: function(response) {
                    if (response.success) {
                        toastr.success(response.message || 'Tạo nhóm thành công!');
                        setTimeout(function() {
                            window.location.href = response.redirect || '/admin/group';
                        }, 1000);
                    } else {
                        toastr.error(response.message || 'Có lỗi xảy ra!');
                        submitBtn.prop('disabled', false).html(originalText);
                    }
                },
                error: function() {
                    toastr.error('Có lỗi xảy ra khi tạo nhóm!');
                    submitBtn.prop('disabled', false).html(originalText);
                }
            });
        });
    </script>
}

