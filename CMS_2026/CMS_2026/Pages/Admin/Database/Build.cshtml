@page "/admin/database/build"
@model CMS_2026.Pages.Admin.Database.BuildModel
@{
    ViewData["Title"] = "Build Database";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Build Database</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">Thông tin Database</h5>
                    
                    <div class="mb-3">
                        <strong>Trạng thái:</strong> 
                        @if (Model.DatabaseExists)
                        {
                            <span class="badge bg-success">Đã kết nối</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Chưa kết nối</span>
                        }
                    </div>

                    <div class="mb-3">
                        <strong>Migrations đã apply:</strong> @Model.AppliedMigrations.Count
                        @if (Model.AppliedMigrations.Any())
                        {
                            <ul class="mt-2">
                                @foreach (var migration in Model.AppliedMigrations)
                                {
                                    <li>@migration</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Không có</span>
                        }
                    </div>

                    <div class="mb-4">
                        <strong>Migrations chưa apply:</strong> @Model.PendingMigrations.Count
                        @if (Model.PendingMigrations.Any())
                        {
                            <ul class="mt-2">
                                @foreach (var migration in Model.PendingMigrations)
                                {
                                    <li class="text-warning">@migration</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-success">Tất cả đã được apply</span>
                        }
                    </div>

                    @if (Model.Result != null)
                    {
                        <div class="alert @(Model.Result.Success ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                            <strong>@(Model.Result.Success ? "Thành công!" : "Lỗi!")</strong> @Model.Result.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" class="mt-4">
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="useMigrations" id="useMigrations" value="true" checked>
                                <label class="form-check-label" for="useMigrations">
                                    Sử dụng Migrations (Khuyến nghị)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="useMigrations" id="useEnsureCreated" value="false">
                                <label class="form-check-label" for="useEnsureCreated">
                                    Tạo database trực tiếp (Chỉ cho Development)
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="mdi mdi-database-sync"></i> Build Database
                        </button>
                    </form>

                    <div class="mt-4">
                        <div class="alert alert-info">
                            <h6 class="alert-heading">Lưu ý:</h6>
                            <ul class="mb-0">
                                <li><strong>Sử dụng Migrations:</strong> Tự động apply tất cả pending migrations. Đây là cách an toàn nhất.</li>
                                <li><strong>Tạo database trực tiếp:</strong> Tạo database và tất cả bảng ngay lập tức (không dùng migrations). Chỉ nên dùng trong môi trường Development.</li>
                                <li>Nếu database đã tồn tại, quá trình này sẽ chỉ apply các migrations còn thiếu.</li>
                                <li>Sau khi build database, hệ thống sẽ tự động reload dữ liệu khởi tạo.</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

