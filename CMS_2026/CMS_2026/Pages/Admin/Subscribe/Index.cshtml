@page
@model CMS_2026.Pages.Admin.Subscribe.IndexModel
@{
    ViewData["Title"] = "Danh sách email đăng ký";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h4 class="page-title">Danh sách email đăng ký</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card-box table-responsive">
                <table id="datatable" class="table table-striped table-bordered dt-responsive">
                    <thead>
                        <tr>
                            <th>Ngày tạo</th>
                            <th>Email</th>
                            <th>IP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subscribe in Model.Subscribes)
                        {
                            <tr>
                                <td>@subscribe.CreatedTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@subscribe.Email</td>
                                <td>@subscribe.Ip</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

