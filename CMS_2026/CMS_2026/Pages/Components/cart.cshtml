@model CMS_2026.Data.Entities.PP_Page
@using CMS_2026.Pages
@using CMS_2026.Services
@inject RootService Root
@inject ShoppingCartService CartService
@{
    var langId = Context.Request.Cookies["LangId"] ?? "vi";
    var config = Root.GetConfig(langId);
    var cartLines = CartService.GetOrderLines();
    var cartMessage = TempData.Peek("CartMessage") as string;
    var cartError = TempData.Peek("CartError") as string;
}

<section class="cart-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Giỏ hàng</h1>
                @if (!string.IsNullOrEmpty(cartMessage))
                {
                    <div class="alert alert-success">@cartMessage</div>
                }
                @if (!string.IsNullOrEmpty(cartError))
                {
                    <div class="alert alert-danger">@cartError</div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                @if (cartLines.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Tổng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in cartLines)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Price.ToString("#,##0") ₫</td>
                                    <td>
                                        <form class="d-flex align-items-center gap-2" method="post" action="/cart/update">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="ProductId" value="@item.ID" />
                                            <input type="hidden" name="Variation" value="@item.Variation" />
                                            <input type="number" min="1" name="Quantity" value="@item.Quantity" class="form-control" style="width:90px;" />
                                            <button type="submit" class="btn btn-outline-secondary btn-sm">Cập nhật</button>
                                        </form>
                                    </td>
                                    <td>@item.RowTotal.ToString("#,##0") ₫</td>
                                    <td>
                                        <form method="post" action="/cart/remove">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="ProductId" value="@item.ID" />
                                            <input type="hidden" name="Variation" value="@item.Variation" />
                                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="text-right">
                        <p><strong>Tạm tính:</strong> @CartService.GetSubTotal().ToString("#,##0") ₫</p>
                        <p><strong>Phí ship:</strong> @CartService.ShipFee.ToString("#,##0") ₫</p>
                        <p><strong>Tổng cộng:</strong> @CartService.GetTotal().ToString("#,##0") ₫</p>
                        <a href="@config.Link?.PageMakeOrder ?? "/checkout"" class="btn btn-primary">Thanh toán</a>
                    </div>
                }
                else
                {
                    <p>Giỏ hàng của bạn đang trống.</p>
                    <a href="/" class="btn btn-primary">Tiếp tục mua sắm</a>
                }
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script>
        function removeFromCart() {
            // Remove from cart logic
        }
    </script>
}

